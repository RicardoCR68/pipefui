<%= form_with model: [@form, @field] do |f| %>
  <% if @field.errors.any? %>
    <h3>There were errors with your submission!</h3>
    <ul>
      <% @field.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :label %>
  <%= f.text_field :label %>

  <%= f.label :kind %>
  <%= f.select :kind, %w[text string] %>

  <%= f.submit %>
<% end %>