<%= form_with model: @form do |f| %>
  <% if @form.errors.any? %>
    <h3>There were errors with your submission!</h3>
    <ul>
      <% @form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.submit %>
<% end %>
